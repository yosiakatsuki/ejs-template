<%
// サイトのルートを定数化.
ROOT = meta[ 'default' ].domain;
// サイト内URLの作成.
getUrl = ( path ) => {
    path = path ? `/${ path }` : '';
    return `${ ROOT }${ path }`;
}
// JS,CSS,アセットに付け加える日付クエリ.
addDateQuery = ( url ) => {
    const sep = -1 === url.indexOf( '?' ) ? '?' : '&';
    const date = new Date();
    const year = date.getFullYear();
    const month = date.getMonth() + 1;
    const day = date.getDate();
    const hours = date.getHours();
    const minutes = date.getMinutes();
    const seconds = date.getSeconds();

    return `${ url }${ sep }${ year }${ month }${ day }${ hours }${ minutes }${ seconds }`;
}
// JS,CSS用URL取得
getScriptsUrl = ( path ) => {
    return addDateQuery( getUrl( path ) );
}
// アセットフォルダURL.
ASSETS = `${ meta[ 'default' ].domain }/assets`;
// アセット内のファイルURL作成.
getAssetUrl = ( path ) => {
    if ( ! path ) {
        return '';
    }

    return addDateQuery( `${ ASSETS }/${ path }` );
}
-%>
